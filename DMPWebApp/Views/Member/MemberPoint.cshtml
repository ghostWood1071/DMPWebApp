
@{
    ViewBag.Title = "Quản lý điểm doanh số";
}

@section css{
    <link rel="stylesheet" href="~/Assets/stylesheets/popup.css">
}





<section role="main" class="content-body">
    <header class="page-header">
        <h2>Quản lý điểm doanh số</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Quản lý điểm doanh số</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <a href="#" class="fa fa-caret-down"></a>
            </div>
            <h2 class="panel-title">Bảng điểm doanh số</h2>
        </header>
        <div class="panel-body">
            <div class="form-group col-sm-3" style="display: flex;align-items: center;padding:0px;margin:0px;z-index:10">
                <label class="form-control-label px-3">Năm</label>
                <select id="year" class="selectpicker">
                    <option>2021</option>
                    <option>2020</option>
                    <option>2019</option>
                </select>
            </div>
            <table class="table table-bordered table-striped mb-none" id="default-table">
                <thead>
                    <tr>
                        <th>Tháng</th>
                        <th>Điểm doanh số trực tiếp</th>
                        <th>Điểm doanh số gián tiếp</th>
                        <th>Điểm doanh số tích lũy</th>
                        <th>Điểm doanh số đã sử dụng</th>
                        <th>Điểm doanh số chưa sử dụng</th>
                        <th>Điểm tổng doanh số</th>
                        <th>Điểm doanh số mạng lưới</th>
                    </tr>
                </thead>
            </table>
        </div>
        <div class="row" style="text-align: center; padding: 20px 0px; display: none;" id="case-1">
            <strong style="color: #653744;">
                Bạn đã đạt cấp cao nhất: <b style=" font-size: 14px; text-shadow: 1px 2px 3px #ccc; text-transform: uppercase; margin: 0px; padding: 9px 0px; font-weight: bold; " id="TPpos">Trưởng Phòng</b>. <br />
                Hãy tiếp tục cố gắng! <br />
            </strong>
        </div>

        <div class="row" style="text-align: center; padding: 20px 0px; display: none; " id="case-2">
            <strong style="color: #653744;">
                Bạn đã đủ điểm để đề xuất thăng cấp lên <b style=" font-size: 14px; text-shadow: 1px 2px 3px #ccc; text-transform: uppercase; margin: 0px; padding: 9px 0px; font-weight: bold; " id="Newpos">Trưởng Phòng</b>! <br />
                Bạn có đồng ý sử dụng điểm để thăng cấp không? <br />
                <button class="btn btn-primary" id="accept">Đồng ý</button> | <button class="btn btn-primary" id="deny">Chưa sử dụng</button>
            </strong>
        </div>

        <div class="row" style="text-align: center; padding: 20px 0px; display: none;" id="case-3">
            <strong style="color: #653744;">
                Bạn hãy cố gắng để đạt mốc tiếp theo <b style=" font-size: 14px; text-shadow: 1px 2px 3px #ccc; text-transform: uppercase; margin: 0px; padding: 9px 0px; font-weight: bold; " id="Nextpos">Trưởng Phòng</b>. <br />
            </strong>
        </div>

    </section>
    <!-- end: page -->
</section>
			</div>
		</section>
<div>

</div>

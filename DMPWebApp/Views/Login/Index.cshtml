
@{
    ViewBag.Title = "Login";
    Layout = null;
}



<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Assets/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Assets/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/Assets/vendor/bootstrap-datepicker/css/datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/Assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Assets/stylesheets/theme-custom.css">

    <link rel="stylesheet"  href="~/Assets/vendor/toast/toastr.min.css"/>

    <!-- Head Libs -->
    <script src="~/Assets/vendor/modernizr/modernizr.js"></script>
    <style>
        a.txcenter {
            padding-top: 10px;
            display: flex;
            justify-content: space-evenly;
        }
        .body-sign{
            max-width:400px !important;
        }
    </style>
</head>
<body>


    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Đăng Nhập</h2>
                </div>
                <form class="panel-body" action="/Login/Create" method="post" onsubmit="login()" autocomplete="on">
                    <div>
                        <div class="form-group mb-lg">
                            <label>Tên đăng nhập</label>
                            <div class="input-group input-group-icon">
                                <input name="Account" type="text" class="form-control input-lg account" />
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-lg">
                            <div class="clearfix">
                                <label class="pull-left">Mật khẩu</label>

                            </div>
                            <div class="input-group input-group-icon">
                                <input name="Password" type="password" class="form-control input-lg password" />
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8" style="float:left;">
                                <div class="checkbox-custom checkbox-default">
                                    <a href="/Login/Reset">Quên mật khẩu</a>
                                </div>
                            </div>
                            <div class="col-sm-4 text-right" style="float:right">
                                <button type="submit" class="btn btn-primary login">Đăng nhập</button>
                            </div>
                            
                        </div>
                        <div class="row" style="text-align: center; padding-top: 10px;">
                            <a href="#" style=""><label id="ForgetPas" >Quên mật khẩu?</label></a>
                        </div>
                    </div>

                </form>
            </div>


        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="~/Assets/vendor/jquery/jquery.js"></script>
    <script src="~/Assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/Assets/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Assets/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/Assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Assets/vendor/magnific-popup/magnific-popup.js"></script>
    <script src="~/Assets/vendor/jquery-placeholder/jquery.placeholder.js"></script>
    <script src="~/Assets/vendor/toast/toastr.min.js"></script>

    <!-- Theme Custom -->
    <script src="~/Assets/javascripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/Assets/javascripts/theme.init.js"></script>
    <script>
        @{
            if (TempData["loginfail"] != null)
            {
                @:toastr.error("@TempData["loginfail"]");
            }
        }


        function login() {
            var userID = $('.account').val().trim();
            var password = $('.password').val().trim();
            if (userID == "") {
                toastr.error("Tên đăng nhập không được để trống");
                return false;
            }
            if (password == "") {
                toastr.error("Mật khẩu không được để trống");
                return false;
            }
            sessionStorage.setItem("userID", userID);
            return true;
        }
    </script>
    
        
</body>
</html>


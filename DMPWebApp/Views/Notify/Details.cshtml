
@{
    ViewBag.Title = "Chi tiết thông báo";
}



<section role="main" class="content-body">
    <header class="page-header">
        <h2>Chi tiết thông báo</h2>
        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Quản lý thông báo</span></li>
                <li><span>Chi tiết thông báo</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">Thông báo</h2>
                </header>
                <div class="panel-body">
                    <form class="form-horizontal form-bordered" method="get">
                        <div class="form-group">
                            <label class="col-md-3 control-label" for="inputDefault">Tiêu đề</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="inputDefault">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="textareaDefault">Nội dung</label>
                            <div class="col-md-6">
                                <textarea class="form-control" rows="3" id="textareaDefault"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" for="inputDefault">Người nhận</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="inputDefault">
                            </div>
                        </div>

                        <div>
                            <div class="row">
                                <div class="col-md-9 col-md-offset-3">
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </section>


        </div>
    </div>

   
    <!-- end: page -->
</section>
                </div>
            </footer>
        </section>
    </div>
}

@section script{
    <script src="~/Assets/javascripts/tables/examples.datatables.editable.js"></script>
    <script>
        (function ($) {
            $(function () {
                EditableTable.initialize(6);
            });
            var header = $('.table th');
            $(header[0]).width("100px");
            $(header[1]).width("320px");
            $(header[2]).width("150px");
            $(header[3]).width("150px");
            $(header[4]).width("70px");

            var rows = $('.table tr');
            for (var i = 1; i < rows.length; i++) {
                var cells = $(rows[i]).children('td');
                for (var j = 2; j < 6; j++)
                    $(cells[j]).css('text-align', 'right');
            }
        }).apply(this, [jQuery]);
    </script>
}

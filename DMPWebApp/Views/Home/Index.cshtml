@{
    ViewBag.Title = "Trang chủ";
}
@section css{
    <link rel="stylesheet" href="~/Assets/stylesheets/popup.css">
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Trang chủ</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Trang chủ</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <div class="row">
        <!--part 1-->
        <div class="col-md-12 col-lg-12 col-xl-12">
            <div class="row" style="padding: 0 15px 15px 15px;">
                <header class="panel-heading">
                    <h3>Thời gian</h3>
                    <div style="margin-top: 20px; display: flex; width: 23%; justify-content: space-between;">
                        <div>
                            <select name="year" id="year">
                                <option value="2021" selected>Năm 2021</option>
                                <option value="2020">Năm 2020</option>
                                <option value="2019">Năm 2019</option>
                            </select>
                        </div>

                        <div>
                            <select name="month" id="month">

                                <option value="T1">Tháng 1</option>
                                <option value="T2">Tháng 2</option>
                                <option value="T3">Tháng 3</option>
                                <option value="T4">Tháng 4</option>
                                <option value="T5">Tháng 5</option>
                                <option value="T6">Tháng 6</option>
                                <option value="T7">Tháng 7</option>
                                <option value="T8">Tháng 8</option>
                                <option value="T9">Tháng 9</option>
                                <option value="T10">Tháng 10</option>
                                <option value="T11">Tháng 11</option>
                                <option value="T12">Tháng 12</option>
                                <option value="Q1">Quý 1</option>
                                <option value="Q2">Quý 2</option>
                                <option value="Q3" selected>Quý 3</option>
                                <option value="Q4">Quý 4</option>
                            </select>
                        </div>
                    </div>

                </header>
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-6 col-xl-6">
                    <section class="panel panel-featured-left panel-featured-quartenary">
                        <div class="panel-body">
                            <div class="widget-summary">
                                <div class="widget-summary-col widget-summary-col-icon">
                                    <div class="summary-icon bg-quartenary">
                                        <i class="fa fa-user"></i>
                                    </div>
                                </div>
                                <div class="widget-summary-col">
                                    <div class="summary">
                                        <div class="info">
                                            <strong class="amount" id="CountLowerMembers">0</strong>
                                        </div>
                                    </div>
                                    <div class="summary-footer">
                                        <a class="text-muted text-uppercase">Số thành viên</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-6">
                    <section class="panel panel-featured-left panel-featured-tertiary">
                        <div class="panel-body">
                            <div class="widget-summary">
                                <div class="widget-summary-col widget-summary-col-icon">
                                    <div class="summary-icon bg-tertiary">
                                        <i class="fa fa-shopping-cart"></i>
                                    </div>
                                </div>
                                <div class="widget-summary-col">
                                    <div class="summary">

                                        <div class="info">
                                            <strong class="amount" id="CountOrders">0</strong>
                                        </div>
                                    </div>
                                    <div class="summary-footer">
                                        <a class="text-muted text-uppercase">Tổng số đơn hàng</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <div class="col-md-12 col-lg-6 col-xl-6">
                    <section class="panel panel-featured-left panel-featured-primary">
                        <div class="panel-body">
                            <div class="widget-summary">
                                <div class="widget-summary-col widget-summary-col-icon">
                                    <div class="summary-icon bg-primary">
                                        <i class="fa fa-life-ring"></i>
                                    </div>
                                </div>
                                <div class="widget-summary-col">
                                    <div class="summary">
                                        <div class="info">
                                            <strong class="amount" id="Accmulation">0</strong>
                                        </div>
                                    </div>
                                    <div class="summary-footer">
                                        <a class="text-muted text-uppercase">Tổng điểm doanh số</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <div class="col-md-12 col-lg-6 col-xl-6">
                    <section class="panel panel-featured-left panel-featured-secondary">
                        <div class="panel-body">
                            <div class="widget-summary">
                                <div class="widget-summary-col widget-summary-col-icon">
                                    <div class="summary-icon bg-secondary">
                                        <i class="fa fa-usd"></i>
                                    </div>
                                </div>
                                <div class="widget-summary-col">
                                    <div class="summary">
                                        <div class="info">
                                            <strong class="amount" id="Salary"> VND</strong>
                                        </div>
                                    </div>
                                    <div class="summary-footer">
                                        <a class="text-muted text-uppercase">Tổng doanh thu</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>



            </div>
        </div>

        <!--part 2-->
        <div class="col-md-12 col-lg-12 col-xl-12">
            <section class="panel">
                <header class="panel-heading">
                    <h2 class="panel-title">Thống kê</h2>
                </header>
                <div class="panel-body">
                    <div class="table-responsive" style="overflow:hidden">
                        <table class="table table-bordered mb-none" id="default-table">
                            <thead>
                                <tr>
                                    <th class="center" width="40px">Tháng</th>
                                    <th class="center">Số thành viên</th>
                                    <th class="center">Số đơn hàng</th>
                                    <th class="center">Tổng điểm doanh số</th>
                                    <th class="center">Tổng doanh thu (VNĐ)</th>
                                </tr>
                            </thead>

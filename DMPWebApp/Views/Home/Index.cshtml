                                    </tr>

                                </tbody>*@
                        </table>
                    </div>
                </div>
            </section>
        </div>

        <!--part 3-->
        <div class="col-md-12 col-lg-12 col-xl-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="chart-data-selector" id="salesSelectorWrapper">
                                <h2>
                                    Năm:
                                    <strong>
                                        <select class="form-control" id="salesSelector">
                                            <option selected>2021</option>
                                            <option>2020</option>
                                            <option>2019</option>
                                        </select>
                                    </strong>
                                </h2>


                                <div id="salesSelectorItems" class="chart-data-selector-items mt-sm row">
                                    <!-- Flot: Sales JSOFT Admin -->
                                    <div class="col-lg-6 col-md-6 col-xl-6" style=" padding: 0px 0px 0px 60px;">
                                        <div class="text-center chart-custom">
                                            <label for="flotDashSales4">Số thành viên</label>
                                            <div class="chart chart-sm chart-active" data-sales-rel="JSOFT Admin" id="flotDashSales4"></div>
                                        </div>

                                        <div class="text-center chart-custom">
                                            <label for="flotDashSales1">Điểm doanh số</label>
                                            <div class="chart chart-sm chart-active" data-sales-rel="JSOFT Admin" id="flotDashSales1"></div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-xl-6 " style=" padding: 0px 0px 0px 60px;">
                                        <div class="text-center chart-custom">
                                            <label for="flotDashSales3">Số đơn hàng</label>
                                            <div class="chart chart-sm chart-active" data-sales-rel="JSOFT Admin" id="flotDashSales3"></div>
                                        </div>

                                        <div class="text-center chart-custom">
                                            <label for="flotDashSales2">Doanh thu</label>

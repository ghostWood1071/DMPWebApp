
@{
    ViewBag.Title = "Quản lý hóa đơn";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Quản lý hóa đơn</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Quản lý hóa đơn</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <a href="#" class="fa fa-caret-down"></a>
                <a href="#" class="fa fa-times"></a>
            </div>
            <h2 class="panel-title">Danh sách hóa đơn</h2>
        </header>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="mb-md">
                        <button id="addToOrder" class="btn btn-primary">Thêm hóa đơn <i class="fa fa-plus"></i></button>
                    </div>
                </div>
            </div>
            <table class="table table-bordered table-striped mb-none" id="tableOrder">
                <thead>
                    <tr>
                        <th></th>
                        <th class="center">Mã hóa đơn</th>
                        <th class="center">Mã thành viên</th>
                        <th class="center">Họ và tên</th>
                        <th class="center">Ngày nhập</th>
                        <th class="center">Chiết khấu (%)</th>
                        <th class="center">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="gradeA">
                        <td>HD001</td>
                        <td>TV0001</td>
                        <td>Nguyễn Văn A</td>
                        <td>16/7/2021</td>
                        <td class="right">40</td>
                        <td class="actions center">
                            <a href="#" class="on-default editOrder"><i class="fa fa-pencil"></i></a>
                            <a href="#" class="on-default removeOrder"><i class="fa fa-trash-o"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>
    <!-- end: page -->
</section>


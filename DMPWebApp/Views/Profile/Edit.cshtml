
@{
    ViewBag.Title = "Sửa thông tin cá nhân";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>Sửa thông tin cá nhân</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Trang cá nhân</span></li>
                <li><span>Sửa thông tin cá nhân</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->
    <div class="row">
        <div class="col-xs-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                    </div>

                    <h2 class="panel-title">Thông tin cá nhân</h2>
                </header>
                <div class="panel-body">
                    <form class="form-horizontal form-bordered" action="#">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Họ tên</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control">
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-3 control-label">Ngày sinh</label>
                            <div class="col-md-5">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                    <input type="text" data-plugin-datepicker class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Địa chỉ</label>
                            <div class="col-md-5">
                                <div class="col-md-6">

                                    <select data-plugin-selectTwo class="form-control populate">
                                        <option>Hưng Yên</option>
                                        <option>Hải Phòng</option>
                                        <option>Hà Nội</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <select data-plugin-selectTwo class="form-control populate">
                                        <option>Huyện Khoái Châu</option>
                                        <option>Huyện Thanh Oai</option>
                                        <option>Quận Đống Đa</option>
                                    </select>
                                </div>
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Số CMND</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Số điện thoại</label>
                            <div class="col-md-5">
                                <input type="text" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Ảnh đại diện</label>
                            <div class="col-md-5">
                                <input type="file" class="form-control">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-9 col-md-offset-3">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                            </div>
                        </div>

                    </form>
                </div>
            </section>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                    </div>
                    <h2 class="panel-title">Đổi mật khẩu</h2>
                </header>
                <div class="panel-body">
                    <form class="form-horizontal form-bordered" action="#">
                        <div class="form-group">
                            <label class="col-md-3 control-label">Mật khẩu cũ</label>
                            <div class="col-md-5">
                                <input type="password" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Mật khẩu mới</label>
                            <div class="col-md-5">
                                <input type="password" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label" f>Mật khẩu mới(nhắc lại)</label>
                            <div class="col-md-5">
                                <input type="password" class="form-control">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-9 col-md-offset-3">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>


    <!-- end: page -->
</section>


@section script{
    <script src="~/assets/javascripts/forms/examples.advanced.form.js"></script>
}


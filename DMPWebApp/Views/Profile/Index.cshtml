
@{
    ViewBag.Title = "Thông tin cá nhân";
}

<section role="main" class="content-body">
    <header class="page-header">
        <h2>User Profile</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Pages</span></li>
                <li><span>User Profile</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->

    <div class="row">
        <div class="col-md-4 col-lg-3">

            <section class="panel">
                <div class="panel-body">
                    <div class="thumb-info mb-md">
                        <img src="~/assets/images/!logged-user.jpg" class="rounded img-responsive" alt="John Doe">
                        <div class="thumb-info-title">
                            <span class="thumb-info-inner">Vũ Khắc Tiệp</span>
                            <span class="thumb-info-type">CEO</span>
                        </div>
                    </div>

                    <div class="widget-toggle-expand mb-md">
                        <div class="widget-content-expanded">
                            <ul class="simple-todo-list">
                                <li>Họ tên: Vuc Khắc Tiệp</li>
                                <li>Ngày sinh: 22/11/1997</li>
                                <li>Quê quán: Quận Đống Đa, Hà Nội</li>
                                <li>SĐT: 0123456789</li>
                            </ul>
                        </div>
                    </div>

                </div>
            </section>

        </div>
        <div class="col-md-8 col-lg-6">

            <div class="tabs">
                <ul class="nav nav-tabs tabs-primary">
                    <li class="active">
                        <a href="#overview" data-toggle="tab">Thông tin chi tiết</a>
                    </li>
                    <li>
                        <a href="#edit" data-toggle="tab">Chỉnh sửa thông tin</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="overview" class="tab-pane active">
                        <form class="form-horizontal" method="get">
                            <h4 class="mb-xlg">Thông tin cá nhân</h4>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Họ tên:</label>
                                    <div class="col-md-8">
                                        <label class="control-label">Vũ Khắc Tiệp</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Quê quán:</label>
                                    <div class="col-md-8">
                                        <label class="control-label">Quận Đống Đa, Hà Nội</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Ngày sinh:</label>
                                    <div class="col-md-8">
                                        <label class="control-label">22/11/1997</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Số điện thoại:</label>
                                    <div class="col-md-8">
                                        <label class="control-label">0123456789</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Số CMND:</label>
                                    <div class="col-md-8">
                                        <label class="control-label">033200111122</label>
                                    </div>
                                </div>
                            </fieldset>
                            <hr class="dotted tall">
                            <h4 class="mb-xlg">Cấp dưới</h4>
                            <div id="tree">

                            </div>
                        </form>
                    </div>
                    <div id="edit" class="tab-pane">
                        <form class="form-horizontal" method="get">
                            <h4 class="mb-xlg">Thông tin cá nhân</h4>
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="profileFirstName">Họ tên</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" id="profileFirstName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="profileLastName">Quê quán</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" id="profileLastName">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="profileAddress">Số điện thoại</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" id="profileAddress">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="profileCompany">Số CMND</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" id="profileCompany">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="profileCompany">Ngày sinh</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" id="profileCompany">
                                    </div>
                                </div>
                            </fieldset>
                            <hr class="dotted tall">

                            <h4 class="mb-xlg">Đổi mật khẩu</h4>
                            <fieldset class="mb-xl">
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="profileNewPassword">Mật khẩu mới</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" id="profileNewPassword">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label" for="profileNewPasswordRepeat">Nhập lại mật khẩu mới</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control" id="profileNewPasswordRepeat">
                                    </div>
                                </div>
                            </fieldset>
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-md-9 col-md-offset-3">
                                        <button type="submit" class="btn btn-primary">Lưu</button>
                                        <button type="reset" class="btn btn-default">Xóa thông tin</button>
                                    </div>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-lg-3">

            <h4 class="mb-md">Thông tin kinh doanh</h4>
            <ul class="simple-card-list mb-xlg">
                <li class="primary">
                    <h3>488</h3>
                    <p>Tổng đơn hàng</p>
                </li>
                <li class="primary">
                    <h3>189,000,000 VND</h3>
                    <p>Tổng thu nhập</p>
                </li>
                <li class="primary">
                    <h3>16</h3>
                    <p>Thành viên cấp dưới</p>
                </li>
            </ul>
        </div>

    </div>
    <!-- end: page -->
</section>

@section script{
    <script src="~/assets/vendor/orgchart/orgchart.js"></script>
    <script>

        var editForm = function () {
            this.nodeId = null;
        }

        editForm.prototype.init = function (obj) {
            var that = this;
            this.obj = obj;
        };

        editForm.prototype.show = function (node) {

        }


        editForm.prototype.hide = function (showldUpdateTheNode) {

        }



        var chart = new OrgChart(document.getElementById("tree"), {
            mouseScrool: OrgChart.action.none,
            enableSearch: false,
            collapse: {
                level: 2,
                allChildren: true
            },
            nodeBinding: {
                field_0: "name",
                field_1: "role",
                field_2: "lol",
                img_0: "img"
            },
            editUI: new editForm(),
            nodes: [
                { id: 1, name: "Amber McKenzie", role: 'trưởng phòng', lol: "abc", img: '/assets/images/logo.jpg' },
                { id: 2, pid: 1, name: "Ava Field" },
                { id: 3, pid: 1, name: "Peter Stevens" },
                { id: 4, pid: 2, name: "Ava Field" },
                { id: 5, pid: 2, name: "Peter Stevens" },
                { id: 6, pid: 3, name: "Ava Field" },
                { id: 7, pid: 3, name: "Peter Stevens" },
            ]
        });
    </script>
}


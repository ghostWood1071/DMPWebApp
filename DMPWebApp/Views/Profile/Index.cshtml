                                                <option value="0">Nữ</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Địa chỉ</label>
                                        <div class="col-md-9">
                                            <input value="Phạm Văn Thành" type="text" class="form-control" id="address">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Số CMND</label>
                                        <div class="col-md-9">
                                            <input value="030087001720" type="text" class="form-control" id="iden-num">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Ngày cấp(CMND)</label>
                                        <div class="col-md-9">
                                            <div class="input-group">
                                                <span class="input-group-addon">

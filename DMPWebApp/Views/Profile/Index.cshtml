
@{
    ViewBag.Title = "Thông tin cá nhân";
}

@section css{
    <link rel="stylesheet" href="~/Assets/stylesheets/tree.css" />
    <link rel="stylesheet" href="~/Assets/vendor/toast/toastr.min.css"/>
}
<section role="main" class="content-body">
    <header class="page-header">
        <h2>Trang cá nhân</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Hồ sơ cá nhân</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>

    <!-- start: page -->

    <div class="row justify-content-center">
        

        <div class="col-md-10 col-lg-11">

            <div class="tabs">
                <div class="tab-content">
                    <div id="overview" class="tab-pane active">
                        <div class="form-horizontal">
                            <div class="justify-space-between">
                                <h4 class="mb-xlg">Thông tin cá nhân</h4>
                                <a class="edit-infor" href=""><i class="fa fa-pencil"></i></a>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    <div class="thumb-info mb-md avatar-container">
                                        <img id="avatar" src="~/Assets/images/avt.jpg" class="rounded img-responsive" alt="John Doe">
                                        <div class="thumb-info-title">
                                            <span class="thumb-info-inner" id="img-name">Phạm Văn Thành</span>
                                            <span class="thumb-info-type" id="pos">Giám đốc</span>
                                        </div>
                                        <div class="edit-avatar">
                                            <input accept="image/*" type="file" class="img-load" onchange="previewAvatar()" id="img-input"/>
                                        </div>
                                        
                                    </div>
                                </div>
                                <fieldset class="col-lg-7 col-md-7">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Họ tên</label>
                                        <div class="col-md-9">
                                            <input value="Phạm Văn Thành" type="text" class="form-control" id="name">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Ngày sinh</label>
                                        <div class="col-md-9">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                                <input value="28/8/1987" type="text" data-plugin-datepicker class="form-control" id="birth">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Giới tính</label>
                                        <div class="col-md-3">
                                            <select class="form-control" data-plugin-multiselect id="gender" >
                                                <option value="1">Nam</option>
                                                <option value="0">Nữ</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Địa chỉ</label>
                                        <div class="col-md-9">
                                            <input value="Phạm Văn Thành" type="text" class="form-control" id="address">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Số CMND</label>
                                        <div class="col-md-9">
                                            <input value="030087001720" type="text" class="form-control" id="iden-num">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Ngày cấp(CMND)</label>
                                        <div class="col-md-9">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                                <input value="13/9/2017" type="text" data-plugin-datepicker class="form-control" id="publish-date">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Nơi cấp(CMND)</label>
                                        <div class="col-md-9">
                                            <input value="Cục Cảnh sát ĐKQL cư trú và DLQG về dân cư" type="text" class="form-control" id="publish-add">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Số điện thoại</label>
                                        <div class="col-md-9">
                                            <input value="0987503999" type="tel" class="form-control" id="phone">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Email</label>
                                        <div class="col-md-9">
                                            <input value="phamvanthanh@gmail.com" type="email" class="form-control" id="email">
                                        </div>
                                    </div>

                                    <div class="row btn-save">
                                        <div class="col-md-9 col-md-offset-3">
                                            <button type="submit" class="btn btn-primary" onclick="saveprofile()">Lưu</button>
                                        </div>
                                    </div>

                                </fieldset>

                            </div>

                        </div>
                        <hr class="dotted" />
                        <div class="form-horizontal" >
                            <div class="justify-space-between">
                                <h4 class="mb-xlg">Thông tin tài khoản</h4>
                                <a class="edit-infor" href=""><i class="fa fa-pencil"></i></a>
                            </div>
                            <div class="row">
                                <div class="col-lg-3 col-md-3">
                                    
                                </div>
                                <fieldset class="col-lg-7 col-md-7">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Tên đăng nhập</label>
                                        <div class="col-md-9">
                                            <input value="TV000001" type="text" class="form-control" id="userID">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Mật khẩu cũ</label>
                                        <div class="col-md-9">
                                            <input type="password" class="form-control" id="old-pass">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Mật khẩu mới</label>
                                        <div class="col-md-9">
                                            <input type="password" class="form-control" id="new-pass">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Nhắc lại mật khẩu</label>
                                        <div class="col-md-9">
                                            <input type="password" class="form-control" id="re-pass">
                                        </div>
                                    </div>


                                    <div class="row btn-save">
                                        <div class="col-md-9 col-md-offset-3">
                                            <button type="submit" class="btn btn-primary" id="btn-change" onclick="chagnePass()">Lưu</button>
                                        </div>
                                    </div>
                                </fieldset>

                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    <!-- end: page -->
</section>

@section script{
    <script src="~/Assets/vendor/toast/toastr.min.js"></script>
    <script src="~/Assets/javascripts/Profile.js">
       
    </script>
}


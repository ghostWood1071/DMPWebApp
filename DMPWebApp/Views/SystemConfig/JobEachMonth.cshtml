
@{
    ViewBag.Title = "Cập nhật hằng tháng";
}
@section css{
    <link rel="stylesheet" href="~/Assets/stylesheets/popup.css">
    <link rel="stylesheet" href="~/Assets/vendor/toast/toastr.min.css" />
    <style>
        input[type='checkbox'] {
            width: 20px;
            height: 20px;
            background: white;
            border-radius: 5px;
            border: 2px solid #555;
        }

            input[type='checkbox']:checked {
                background: #abd;
            }
        input[type=checkbox] {
            position: relative;
            bottom: 1px;
        }

        label {
            display: block;
        }
    </style>
}


<section role="main" class="content-body">
    <header class="page-header">
        <h2>Cập nhật lương tháng</h2>
        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Cập nhật lương tháng</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
        </div>
    </header>
     
    <!-- start: page -->
    <section class="panel">
        <header class="panel-heading">
            <div class="panel-actions">
                <a href="#" class="fa fa-caret-down"></a>
            </div>
            <h2 class="panel-title">Cập nhật lương tháng</h2>
        </header>
        <div class="panel-body">
            <div style="margin:0px 0px 17px 0px;">
                <button class="btn btn-primary" id="accept" style="display:none;">Duyệt bảng lương</button>
                <button class="btn btn-primary" id="export" style="float:right;">Xuất file Excel</button>
            </div>
            <table class="table table-bordered table-striped mb-none" id="default-table">
                <thead>
                    <tr>
                        <th>Mã thành viên</th>
                        <th>Tên thành viên</th>
                        <th>Tiền chênh 1 cấp (VNĐ)</th>
                        <th>Tiền hoa hồng mua hàng (VNĐ)</th>
                        <th>Hoa hồng thành tích lãnh đạo (VNĐ)</th>
                        <th>Tổng lương (VNĐ)</th>
                    </tr>
                </thead>
            </table>
        </div>
    </section>
    <!-- end: page -->
    
</section>
			</div>
		</section>

<div class="mx-auto workform" id="form1" style="display: none;margin-top:100px;">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <div class="card">
                <h3 class="text-center mb-4">Duyệt bảng lương</h3>
                <form class="form-card">
                    <div class="row" style="display: flex; justify-content: center;">
                            <input type="checkbox" id="salary" name="salary" value="Salary" style="margin:0px;margin-right:7px;">
                            <label for="salary" style="margin:0px">Tôi xin xác nhận thông tin bảng lương trên là đúng!</label><br>
                    </div>
                    <footer style="padding: 15px 0px;">
                        <div class="row">
                            <div class="col-md-12 text-right">
                                <button id="dialogConfirm1" class="btn btn-primary  save" type="button">Lưu bảng lương</button>
                                <button id="dialogCancel1" class="btn btn-default  exit" type="button">Để sau</button>
                            </div>
                        </div>
                    </footer>
                </form>
            </div>
        </div>
    </div>
</div>


